# FWC API Configuration
FWC_API_BASE_URL=https://api.fwc.gov.au/api/v1
FWC_API_KEY=your_api_key_here
FWC_API_TIMEOUT=30
FWC_API_MAX_RETRIES=3
FWC_API_PAGE_SIZE=100

# MS SQL Server Configuration
MSSQL_HOST=localhost
MSSQL_PORT=1433
MSSQL_DATABASE=fwc_awards
MSSQL_USERNAME=sa
MSSQL_PASSWORD=YourStrong@Password
MSSQL_DRIVER=ODBC Driver 18 for SQL Server
MSSQL_TRUST_SERVER_CERTIFICATE=yes

# SQLite State Database (for local job tracking)
SQLITE_DATABASE_PATH=./data/etl_state.db

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_CRON_EXPRESSION=0 2 * * *
SCHEDULER_TIMEZONE=Australia/Sydney

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/etl.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=1

# Environment
ENVIRONMENT=development
DEBUG=false
